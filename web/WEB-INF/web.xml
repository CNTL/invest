<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/tl-servlet.xml
			/WEB-INF/movieinvest.xml
		</param-value>
	</context-param>
  	<filter>
		<filter-name>URLEntryFilter</filter-name>
		<filter-class>com.tl.invest.workspace.URLEntryFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
		<init-param>
			<!-- if file contains part below, it will not do session check.-->
			<param-name>session-not-checked</param-name>
			<param-value>
<!-- 				index.jsp,default.jsp,doc/docreg.do,Main.do,Search.do,Captcha.do,CaptchaSMS.do,MainList.do,login.jsp,register.jsp,userLogin.jsp,userlogin.do,user/findpwd.do,user/sendpwd.do,user/resetpwd.do,syslogin.do,user/photo.do,user/CompanyMain.do,user/CompanyMainMore.do,user/CompanyDetail.do,user/recruit.do,user/video.do,userout/,Index.do,project/Project.do,project/Support.do,project/ProjectFetcher.do,project/List.do,notice/,static/,help/ -->
				doc/docreg.do,Main.do,Search.do,Captcha.do,CaptchaSMS.do,login.jsp,userLogin.jsp,userlogin.do,user/loginMain.do,user/findpwd.do,user/sendpwd.do,user/resetpwd.do,syslogin.do,user/photo.do,user/CompanyMainMore.do,user/CompanyDetail.do,user/video.do,userout/,project/Project.do,project/Support.do,project/ProjectFetcher.do,notice/,static/,help/ 
			</param-value>
		</init-param>
		<init-param>
			<!-- extensions of the files not-allow-browser-cache -->
			<param-name>cache-not-allowed</param-name>  
			<param-value>.do,.jsp</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>URLEntryFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
  	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>load</servlet-name>
		<servlet-class>com.tl.kernel.init.LoadServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>conf/sys-config.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>tl</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>tl</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	
	<resource-ref>
		<description>tl Datasource</description> 
		<res-ref-name>jdbc/movieInvest</res-ref-name> 
		<res-type>javax.sql.DataSource</res-type>
		<!--<res-type>com.mchange.v2.c3p0.ComboPooledDataSource</res-type>-->
		<res-auth>Container</res-auth>
	</resource-ref>
	
</web-app>